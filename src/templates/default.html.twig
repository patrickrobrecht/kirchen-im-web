{% import 'macros.html.twig' as macros %}
{% spaceless %}
<!DOCTYPE html>
    {{ base_url }}
<html lang="{{ language }}">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8">
    {% block metadata %}
        <title>{{ title|trans }} | {{ 'Kirchliche Web- und Social-Media-Auftritte'|trans }}</title>
        {% if description %}
            <meta name="description" content="{{ description|trans }}">
        {% endif %}
    {% endblock %}
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">
    <link rel="search" type="application/opensearchdescription+xml" href="{{ path_for(languageSlug ~ '-opensearch') }}" title="Kirchen im Web">
    {% block head_styles %}
        <link rel="stylesheet" href="/public/css/style.min.css">
    {% endblock %}
</head>
<body>
    <header>
        <nav class="menu">
            {{ macros.menu(headerMenu, currentPath) }}
        </nav>
    </header>
    <main>
        {% if headline %}
            <h1>{{ headline|trans }}</h1>
        {% elseif title %}
            <h1>{{ title|trans }}</h1>
        {% endif %}

        {% block main %}
            <p>{{ text|trans }}</p>
        {% endblock %}
    </main>
    <footer>
        <nav class="menu">
            {{ macros.menu(footerMenu, currentPath) }}
        </nav>
    </footer>
    {% block footer_scripts %}
    {% endblock %}
    {% block structured_data %}
    {% endblock %}
</body>
</html>
{% endspaceless %}
