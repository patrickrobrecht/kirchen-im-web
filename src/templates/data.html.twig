{% extends 'default.html.twig' %}

{% block main %}
    <article id="download">
        <h2>{% trans 'Download' %}</h2>
        <p>{% trans 'Die Daten stehen in einem freien und offenen Format zur Verfügung, d. h. die Daten können auch für andere Projekte verwendet werden.' %}</p>
        <ul>
            <li><a href="/data/data.json">{% trans 'Download JSON' %}</a></li>
            <li><a href="/data/data.csv">{% trans 'Download csv' %}</a>
                ({% trans 'Trennzeichen: Semikolon, da einige der Namen ein Komma enthalten' %})</li>
        </ul>
        <p>{% trans 'Hinweis: Die Daten werden täglich neu in die beiden Formate exportiert.' %}</p>
    </article>

    <article id="recently-added">
        <h2>{% trans 'Zuletzt hinzugefügt' %}</h2>
        <table class="table table-striped tablesorter">
            <thead>
                <tr>
                    <th scope="col">{% trans 'Name' %}</th>
                    <th scope="col">{% trans 'PLZ' %}</th>
                    <th scope="col">{% trans 'Ort' %}</th>
                    <th scope="col">{% trans 'Land' %}</th>
                    <th scope="col">{% trans 'Konfession' %}</th>
                    <th scope="col">{% trans 'Gemeindetyp' %}</th>
                    {% for id, name in config.preselectedWebsites %}
                        <th scope="col">{{ name }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for entry in entries %}
                    <tr>
                        <td scope="row"><a href="{{ path_for(languageSlug ~ '-details', {'id': entry.id}) }}">{{ entry.name }}</a></td>
                        <td>{{ entry.postalCode }}</td>
                        <td>{{ entry.city }}</td>
                        <td>{{ config.countries[entry.country]|trans }}</td>
                        <td>{{ entry.denomination|trans }}</td>
                        <td>{{ entry.type|trans }}</td>
                        {% for id, name in config.preselectedWebsites %}
                            <td>
                                {% if entry[id] %}
                                    <a href="{{ entry[id] }}">{{ name }}</a>
                                {% endif %}
                            </td>
                        {% endfor %}
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </article>
{% endblock %}
