<?xml version="1.0"?>
<ruleset name="kirchen-im-web coding standard">
    <description>kirchen-im-web coding standard</description>

    <!-- display progress -->
    <arg value="psv"/>
    <!-- use colors in output -->
    <arg name="colors"/>

    <!-- PSR12 -->
    <rule ref="PSR12"/>
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- PHP version compatibility. -->
    <config name="testVersion" value="7.4-8.0"/>
    <rule ref="PHPCompatibility"/>
    <rule ref="PHPCompatibility.FunctionDeclarations.NewClosure.ThisFoundOutsideClass">
        <exclude-pattern>index.php</exclude-pattern>
    </rule>

    <!-- Paths to check -->
    <file>src</file>
    <file>config.sample.php</file>
    <file>cron.php</file>
    <file>index.php</file>
</ruleset>
