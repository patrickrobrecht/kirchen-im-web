{
  "name": "patrickrobrecht/kirchen-im-web",
  "description": "overview of churchy websites and social media profiles in the German speaking area",
  "keywords": [
    "churches",
    "map",
    "media",
    "social"
  ],
  "homepage": "https://kirchen-im-web.de/",
  "support": {
    "issues": "https://github.com/patrickrobrecht/kirchen-im-web/issues",
    "source": "https://github.com/patrickrobrecht/kirchen-im-web/archive/master.zip"
  },
  "license": "GPL-3.0",
  "require": {
    "php": "^7.0",
    "j7mbo/twitter-api-php": "^1.0",
    "npm-asset/bootstrap": "^4.1.3",
    "npm-asset/jquery": "^3.2",
    "npm-asset/highcharts": "^6.0",
    "npm-asset/leaflet": "^1.2",
    "npm-asset/leaflet.markercluster": "^1.1",
    "npm-asset/tablesorter": "^2.29",
    "slim/slim": "^3.8",
    "slim/twig-view": "^2.2",
    "twig/extensions": "^1.5"
  },
  "require-dev": {
    "matthiasmullie/minify": "^1.3",
    "slowprog/composer-copy-file": "^0.2"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "@copyassets",
      "npm install"
    ],
    "post-update-cmd": [
      "@copyassets",
      "npm update"
    ],
    "copyassets": [
      "SlowProg\\CopyFile\\ScriptHandler::copy"
    ],
    "minify": [
      "minifyjs public/js/check.js > public/js/check.min.js",
      "minifyjs public/js/map.js > public/js/map.min.js"
    ]
  },
  "autoload": {
    "psr-4": {
      "KirchenImWeb\\": "src/"
    }
  },
  "extra": {
    "copy-file": {
      "vendor/npm-asset/bootstrap/dist/js/bootstrap.min.js": "public/lib/",
      "vendor/npm-asset/jquery/dist/jquery.min.js": "public/lib/",
      "vendor/npm-asset/highcharts/highcharts.js": "public/lib/",
      "vendor/npm-asset/leaflet/dist/images/layers.png": "public/lib/images/",
      "vendor/npm-asset/leaflet/dist/images/layers-2x.png": "public/lib/images/",
      "vendor/npm-asset/leaflet/dist/leaflet.css": "public/lib/",
      "vendor/npm-asset/leaflet/dist/leaflet.js": "public/lib/",
      "vendor/npm-asset/leaflet.markercluster/dist/leaflet.markercluster.js": "public/lib/",
      "vendor/npm-asset/leaflet.markercluster/dist/MarkerCluster.css": "public/lib/",
      "vendor/npm-asset/leaflet.markercluster/dist/MarkerCluster.Default.css": "public/lib/",
      "vendor/npm-asset/tablesorter/dist/js/jquery.tablesorter.min.js": "public/lib/"
    }
  }
}
