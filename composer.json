{
  "name": "patrickrobrecht/kirchen-im-web",
  "description": "overview of churchy websites and social media profiles in the German speaking area",
  "keywords": [
    "churches",
    "map",
    "social-media"
  ],
  "homepage": "https://kirchen-im-web.de/",
  "support": {
    "issues": "https://github.com/patrickrobrecht/kirchen-im-web/issues",
    "source": "https://github.com/patrickrobrecht/kirchen-im-web/archive/master.zip"
  },
  "license": "GPL-3.0",
  "require": {
    "php": "^8.0",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "facebook/graph-sdk": "^5.7",
    "guzzlehttp/guzzle": "^7.4",
    "j7mbo/twitter-api-php": "^1.0",
    "opencage/geocode": "^3.0",
    "php-di/slim-bridge": "^3.1",
    "phpfastcache/phpfastcache": "^8.0",
    "phpmailer/phpmailer": "^6.5",
    "raiym/instagram-php-scraper": "^0.12",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.9",
    "slim/twig-view": "^3.2",
    "symfony/twig-bridge": "^5.3",
    "symfony/translation": "^5.3"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "scripts": {
    "cs": [
      "@csPHP",
      "npm run csCSS",
      "npm run csJS"
    ],
    "csPHP": [
      "phpcs"
    ],
    "csfix": [
      "@csfixPHP",
      "npm run fixCSS",
      "npm run fixJS"
    ],
    "csfixPHP": [
      "phpcbf"
    ],
    "dev": [
      "@composer install --ignore-platform-req=php",
      "npm run watch"
    ],
    "prod": [
      "@composer install --optimize-autoloader --no-dev --ignore-platform-req=php",
      "npm run postinstall"
    ]
  },
  "autoload": {
    "psr-4": {
      "KirchenImWeb\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
