{
  "name": "patrickrobrecht/kirchen-im-web",
  "description": "overview of churchy websites and social media profiles in the German speaking area",
  "keywords": [
    "churches",
    "map",
    "social-media"
  ],
  "homepage": "https://kirchen-im-web.de/",
  "support": {
    "issues": "https://github.com/patrickrobrecht/kirchen-im-web/issues",
    "source": "https://github.com/patrickrobrecht/kirchen-im-web/archive/master.zip"
  },
  "license": "GPL-3.0",
  "require": {
    "php": "^8.0",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "guzzlehttp/guzzle": "^7.5.0",
    "j7mbo/twitter-api-php": "^1.0.6",
    "opencage/geocode": "^v3.1.1",
    "php-di/slim-bridge": "^3.2.0",
    "phpfastcache/phpfastcache": "^8.1.3",
    "phpmailer/phpmailer": "^6.6.4",
    "raiym/instagram-php-scraper": "^0.12.7",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.10.0",
    "slim/twig-view": "^3.3.0",
    "symfony/twig-bridge": "^5.4.12",
    "symfony/translation": "^5.4.12"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "phpcompatibility/php-compatibility": "^9.3",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "scripts": {
    "cs": [
      "@csPHP",
      "npm run csCSS",
      "npm run csJS"
    ],
    "csPHP": [
      "phpcs"
    ],
    "csfix": [
      "@csfixPHP",
      "npm run fixCSS",
      "npm run fixJS"
    ],
    "csfixPHP": [
      "phpcbf"
    ],
    "dev": [
      "@composer install --ignore-platform-req=php",
      "npm run watch"
    ],
    "prod": [
      "@composer install --optimize-autoloader --no-dev --ignore-platform-req=php",
      "npm run postinstall"
    ]
  },
  "autoload": {
    "psr-4": {
      "KirchenImWeb\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
