{
  "name": "patrickrobrecht/kirchen-im-web",
  "description": "overview of churchy websites and social media profiles in the German speaking area",
  "keywords": [
    "churches",
    "map",
    "social-media"
  ],
  "homepage": "https://kirchen-im-web.de/",
  "support": {
    "issues": "https://github.com/patrickrobrecht/kirchen-im-web/issues",
    "source": "https://github.com/patrickrobrecht/kirchen-im-web/archive/master.zip"
  },
  "license": "GPL-3.0",
  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "guzzlehttp/guzzle": "^7.5.0",
    "opencage/geocode": "^3.2.0",
    "php-di/slim-bridge": "^3.4.0",
    "phpfastcache/phpfastcache": "^9.1.3",
    "phpmailer/phpmailer": "^6.8.1",
    "raiym/instagram-php-scraper": "^0.12.9",
    "slim/psr7": "^1.6.1",
    "slim/slim": "^4.12.0",
    "slim/twig-view": "^3.3.0",
    "symfony/twig-bridge": "^6.3.5",
    "symfony/translation": "^6.3.3"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
    "phpcompatibility/php-compatibility": "^9.3.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.7.2"
  },
  "scripts": {
    "cs": [
      "@csPHP",
      "npm run csCSS",
      "npm run csJS"
    ],
    "csPHP": [
      "phpcs"
    ],
    "csfix": [
      "@csfixPHP",
      "npm run fixCSS",
      "npm run fixJS"
    ],
    "csfixPHP": [
      "phpcbf"
    ]
  },
  "autoload": {
    "psr-4": {
      "KirchenImWeb\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "audit": {
      "abandoned": "fail"
    }
  }
}
