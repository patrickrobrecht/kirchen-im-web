{
  "name": "patrickrobrecht/kirchen-im-web",
  "description": "overview of churchy websites and social media profiles in the German speaking area",
  "keywords": [
    "churches",
    "map",
    "social-media"
  ],
  "homepage": "https://kirchen-im-web.de/",
  "support": {
    "issues": "https://github.com/patrickrobrecht/kirchen-im-web/issues",
    "source": "https://github.com/patrickrobrecht/kirchen-im-web/archive/master.zip"
  },
  "license": "GPL-3.0",
  "require": {
    "php": "^8.1",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "guzzlehttp/guzzle": "^7.5.0",
    "j7mbo/twitter-api-php": "^1.0.6",
    "opencage/geocode": "^3.1.1",
    "php-di/slim-bridge": "^3.2.0",
    "phpfastcache/phpfastcache": "^9.1.2",
    "phpmailer/phpmailer": "^6.6.5",
    "raiym/instagram-php-scraper": "^0.12.9",
    "slim/psr7": "^1.6",
    "slim/slim": "^4.11.0",
    "slim/twig-view": "^3.3.0",
    "symfony/twig-bridge": "^6.2.0",
    "symfony/translation": "^6.2.0"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "phpcompatibility/php-compatibility": "^9.3.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.7.1"
  },
  "scripts": {
    "cs": [
      "@csPHP",
      "npm run csCSS",
      "npm run csJS"
    ],
    "csPHP": [
      "phpcs"
    ],
    "csfix": [
      "@csfixPHP",
      "npm run fixCSS",
      "npm run fixJS"
    ],
    "csfixPHP": [
      "phpcbf"
    ]
  },
  "autoload": {
    "psr-4": {
      "KirchenImWeb\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
