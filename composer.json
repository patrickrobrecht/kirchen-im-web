{
  "name": "patrickrobrecht/kirchen-im-web",
  "description": "overview of churchy websites and social media profiles in the German speaking area",
  "keywords": [
    "churches",
    "map",
    "social-media"
  ],
  "homepage": "https://kirchen-im-web.de/",
  "support": {
    "issues": "https://github.com/patrickrobrecht/kirchen-im-web/issues",
    "source": "https://github.com/patrickrobrecht/kirchen-im-web/archive/master.zip"
  },
  "license": "GPL-3.0",
  "require": {
    "php": "^7.4",
    "ext-curl": "*",
    "ext-dom": "*",
    "ext-gettext": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-pdo": "*",
    "j7mbo/twitter-api-php": "^1.0.6",
    "opencage/geocode": "^2.1.0",
    "phpmailer/phpmailer": "^6.2.0",
    "railto/twig-asset-version-extension": "^1.0.2",
    "raiym/instagram-php-scraper": "^0.9.10",
    "slim/slim": "^3.12.3",
    "slim/twig-view": "^2.5.1",
    "twig/extensions": "^1.5.4"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5.8"
  },
  "scripts": {
    "post-install-cmd": [
      "npm install"
    ],
    "post-update-cmd": [
      "npm update",
      "npm run postinstall"
    ],
    "cs": [
      "@csPHP",
      "npm run csCSS",
      "npm run csJS"
    ],
    "csPHP": [
      "phpcs"
    ],
    "csfix": [
      "@csfixPHP",
      "npm run fixCSS",
      "npm run fixJS"
    ],
    "csfixPHP": [
      "phpcbf"
    ],
    "dev": [
      "@composer install",
      "npm run watch"
    ],
    "prod": [
      "@composer install --optimize-autoloader --no-dev",
      "npm run postinstall"
    ]
  },
  "autoload": {
    "psr-4": {
      "KirchenImWeb\\": "src/"
    }
  }
}
