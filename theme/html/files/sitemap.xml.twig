<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for lang in config.languages %}
        {% set pages = ['home', 'map', 'search', 'comparison', 'add', 'stats', 'legal', 'data'] %}
        {% for page in pages %}
            <url>
                <loc>{{ host ~ base_url ~ path_for(lang ~ '-' ~ page) }}</loc>
                <changefreq>monthly</changefreq>
            </url>
        {% endfor %}

        {% for church in churches %}
            <url>
                <loc>{{ host ~ base_url ~ path_for(lang ~ '-details', {'id': church.slug}) }}</loc>
                <changefreq>monthly</changefreq>
                <lastmod>{{ church.lastUpdate|date('c') }}</lastmod>
            </url>
        {% endfor %}
    {% endfor %}
</urlset>
