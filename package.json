{
  "private": true,
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^6.1.1",
    "bootstrap": "^5.1.3",
    "cross-env": "^7.0.3",
    "del": "^6.1.1",
    "eslint": "^8.17.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "highcharts": "^10.1.0",
    "laravel-mix": "^6.0.48",
    "laravel-mix-make-file-hash": "^2.2.0",
    "leaflet": "^1.8.0",
    "leaflet.markercluster": "^1.5.3",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.52.2",
    "sass-loader": "^13.0.0",
    "stylelint": "^14.8.5",
    "stylelint-config-standard-scss": "^4.0.0",
    "tablesort": "^5.3.0"
  },
  "scripts": {
    "postinstall": "npm run build-dev",
    "build": "npm run build-dev",
    "build-dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --config=node_modules/laravel-mix/setup/webpack.config.js",
    "build-production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --config=node_modules/laravel-mix/setup/webpack.config.js",
    "csCSS": "stylelint resources/css/*.scss",
    "fixCSS": "stylelint resources/css/*.scss --fix",
    "csJS": "eslint resources/js/*.js webpack.mix.js",
    "fixJS": "eslint resources/js/*.js webpack.mix.js --fix",
    "watch": "npm run build-dev -- --watch",
    "watch-poll": "npm run watch -- --watch-poll"
  },
  "eslintConfig": {
    "extends": "standard",
    "rules": {
      "semi": 0
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ]
  }
}
