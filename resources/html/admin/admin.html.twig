{% extends 'default.html.twig' %}

{% import 'admin/admin-macros.html.twig' as adminMacros %}

{% block head_styles %}
    {{ parent() }}
    <meta name="robots" content="noindex">
{% endblock %}

{% block main %}
    <main class="container-fluid py-md-3">
        <article>
            <h2>Webauftritt nicht erreichbar ({{ websitesError | length }})</h2>
            {{ adminMacros.websitesErrorTable(websitesError) }}
        </article>

        <article>
            <h2>Keine Followerzahlen verf√ºgbar ({{ websitesWithMissingFollowers | length }})</h2>
            {{ adminMacros.websitesErrorTable(websitesWithMissingFollowers) }}
